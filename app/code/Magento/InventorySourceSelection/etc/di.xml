<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\InventoryRequestInterface"
                type="Magento\InventorySourceSelection\Model\Request\InventoryRequest"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\ItemRequestInterface"
                type="Magento\InventorySourceSelection\Model\Request\ItemRequest"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\SourceSelectionAlgorithmInterface"
                type="Magento\InventorySourceSelection\Model\SourceSelectionAlgorithm"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\SourceSelectionItemInterface"
                type="Magento\InventorySourceSelection\Model\Result\SourceSelectionItem"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\SourceSelectionResultInterface"
                type="Magento\InventorySourceSelection\Model\Result\SourceSelectionResult"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\SourceSelectionServiceInterface"
                type="Magento\InventorySourceSelection\Model\SourceSelectionService"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\GetDefaultSourceSelectionAlgorithmCodeInterface"
                type="Magento\InventorySourceSelection\Model\GetDefaultSourceSelectionAlgorithmCode"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\GetDistanceProviderCodeInterface"
                type="Magento\InventorySourceSelection\Model\GetDistanceProviderCode"/>
    <preference for="Magento\InventorySourceSelectionApi\Api\Data\AddressRequestInterface"
                type="Magento\InventorySourceSelection\Model\Request\AddressRequest"/>

    <type name="Magento\InventorySourceSelection\Model\SourceSelectionService">
        <arguments>
            <argument name="sourceSelectionMethods" xsi:type="array">
                <item name="priority"
                      xsi:type="string">Magento\InventorySourceSelection\Model\Algorithms\PriorityBasedAlgorithm</item>
                <item name="distance"
                      xsi:type="string">Magento\InventorySourceSelection\Model\Algorithms\DistanceBasedAlgorithm</item>
            </argument>
        </arguments>
    </type>
    <type name="\Magento\InventorySourceSelectionApi\Model\DistanceProviderPool">
        <arguments>
            <argument name="providers" xsi:type="array">
                <item name="google"
                      xsi:type="object">Magento\InventorySourceSelection\Model\DistanceProvider\GoogleMap</item>
                <item name="offline"
                      xsi:type="object">Magento\InventorySourceSelection\Model\DistanceProvider\Offline</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\InventorySourceSelection\Model\Config\Source\DistanceProvider">
        <arguments>
            <argument name="distanceProviderDescriptions" xsi:type="array">
                <item name="google" xsi:type="string">Google MAP distance</item>
                <item name="offline" xsi:type="string">Offline distance calculation</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Config\Model\Config\TypePool">
        <arguments>
            <argument name="sensitive" xsi:type="array">
                <item name="cataloginventory/source_selection_distance_based_google/api_key" xsi:type="string">1</item>
            </argument>
            <argument name="environment" xsi:type="array">
                <item name="cataloginventory/source_selection_distance_based_google/api_key" xsi:type="string">1</item>
            </argument>
        </arguments>
    </type>


    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="importGeoNames" xsi:type="object">Magento\InventorySourceSelection\Console\Command\ImportGeoNamesCommand</item>
            </argument>
        </arguments>
    </type>

</config>
